<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dev.huertix.throttle_dcs_beta.Start">

    <TextView
        android:text="DCS A10C\nTHROTTLE CONTROLER\n\nNETWORK SET UP"
        android:textSize="20dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:layout_weight="3"
        android:textStyle="bold"
        android:background="#000"
        android:textColor="#fff"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1">

        <TextView
            android:id="@+id/question"
            android:text="DCS HOST IP?"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/hostIp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="192.168.1.3"
            android:gravity="center"
            android:inputType="phone"
            android:imeOptions="actionNext"/>

        <TextView
            android:text="DCS HOST PORT?"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/hostPort"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="phone"
            android:text="14801"
            android:imeOptions="actionNext"/>

        <TextView
            android:text="ANDROID PORT?"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/receiverPort"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="phone"
            android:text="14800"
            android:imeOptions="actionGo"/>

    </LinearLayout>

</LinearLayout>
